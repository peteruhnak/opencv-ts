{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "index.js",
    "lib/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}